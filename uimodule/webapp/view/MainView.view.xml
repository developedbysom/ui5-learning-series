<mvc:View
    controllerName="com.sap.crud.ui5demo.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                    <Panel headerText="Product List"  class="sapUiResponsiveMargin" width="auto">
                            <List items="{products>/}">
                                <ObjectListItem title="{products>ProductName}"
                                press=".onPressItem"
                                type="Active"        
                                number="{
                                    parts:[{path:'products>UnitPrice'},{path:'products>currencyCode'}],
                                    type:'sap.ui.model.type.Currency',
                                    formatOptions:{showMeasure:false}
                                }"        
                                numberUnit="{products>currencyCode}" 
                                numberState="{= ${products>UnitPrice} > ${employee>/thresholdValue} ? 'Error': 'Success' }"
                                >
                                <attributes>
                                    <ObjectAttribute text="{products>QuantityPerUnit}"/>   
                                </attributes>
                                
                                </ObjectListItem>
                            </List>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
