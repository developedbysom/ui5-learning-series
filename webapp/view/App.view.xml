<mvc:View controllerName="dataBinding.controller.App" xmlns="sap.m"
	 xmlns:mvc="sap.ui.core.mvc">

	<Panel headerText="Binding Constraints And Custom Data Type" 
		class="sapUiResponsiveMargin" width="auto">
		<content>

			<Label text="Enter Order Qty1" showColon="true" />
			<Input id='OrdQty1' class="sapUiSmallMarginBottom" placeholder="Enter Order Quantity"
				valueStateText="Quantity should be between 1 and 10" value="{
                path:'myModel>/OrderQuantity1',
                type: 'sap.ui.model.type.Integer',                
                constraints : {
					minimum: 1,
					maximum: 10
                    }
				}"  />


			
			<Label text="Enter Order Qty2" showColon="true" />
			<Input id='OrdQty2' class="sapUiSmallMarginBottom" 
			placeholder="Enter Order Quantity"						
				  change=".onChange"/>

			<Label text="Enter Weight" showColon="true" />
			<Input id="weight" class="sapUiSmallMarginBottom" placeholder="Enter Weight"
				 value="{
					path : 'myModel>/weight',
					type : 'sap.ui.model.odata.type.Decimal',
					formatOptions:{
							minFractionDigits:3,
							maxFractionDigits:3
						}, 
					constraints:{
							precision:13,
							scale:3,
							minimum:'2.000',
							maximum: '10.000'
						}			
				}" />

			<Label text="Enter Travel Date" showColon="true" />
			<DatePicker id="nameInput2" class="sapUiSmallMarginLeft sapUiSmallMarginBottom" value='{
					path: "myModel>/date",
					type: "sap.ui.model.type.Date",
					formatOptions:{
						pattern: "MM-dd-yyyy",
						strictParsing:"true"
					}
				}'  />

			<Label text="Enter ZIP Code" showColon="true" />
			<Input id="zipcode" class="sapUiSmallMarginBottom" placeholder="Enter your zip code" 					
					value="{
						path: 'myModel>/zip',
						type: 'sap.ui.sample.onlyDigit'

				}" />
		</content>

	</Panel>

</mvc:View>